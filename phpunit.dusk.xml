<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         stopOnFailure="true"
         displayDetailsOnTestsThatTriggerWarnings="true"
         displayDetailsOnTestsThatTriggerErrors="true"
         displayDetailsOnTestsThatTriggerNotices="true"
         stopOnSkipped="false"
         stopOnRisky="false"
         stopOnIncomplete="false"
         stopOnDeprecation="false"
         failOnEmptyTestSuite="false"
         failOnDeprecation="false"
         failOnIncomplete="false"
         failOnNotice="false"
         failOnRisky="false"
         failOnSkipped="false"
         failOnWarning="false"


>
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>


        <testsuite name="CoreBrowserTests">
            <directory>src/MicroweberPackages/*/Tests/Browser</directory>
            <exclude>./src/MicroweberPackages/*/</exclude>

        </testsuite>

        <testsuite name="ModulesBrowserTests">
            <directory>Modules/*/Tests/Browser</directory>

        </testsuite>

        <testsuite name="TemplatesBrowserTests">
            <directory>Templates/*/Tests/Browser</directory>
        </testsuite>

    </testsuites>
    <source>
        <include>
            <directory>app</directory>
            <directory>src</directory>
        </include>
    </source>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="SESSION_DRIVER" value="array"/>
        <ini name="memory_limit" value="-1"/>
        <env name="MAIL_DRIVER" value="array"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
        <env name="SYMFONY_DEPRECATIONS_HELPER" value="weak"/>
        <ini name="display_errors" value="On"/>
        <ini name="display_startup_errors" value="On"/>

    </php>


</phpunit>
